{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "https://udeploy.dev/taxi/taxi.json",
    "type": "object",
    "properties": {
        "sites": {
            "type": "array",
            "contains": {
                "type": "object",
                "contains": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "php": {
                            "type": "string"
                        },
                        "branch": {
                            "type": "string"
                        },
                        "secure": {
                            "type": "boolean"
                        },
                        "vcs": {
                            "type": "string"
                        },
                        "post-build": {
                            "type": "array",
                            "contains": {
                                "type": "string"
                            }
                        },
                        "post-reset": {
                            "type": "array",
                            "contains": {
                                "type": "string"
                            }
                        }
                    },
                    "required": ["name", "branch", "vcs"]
                }
            }
        },
        "hooks": {
            "type": "object",
            "required": ["build", "reset"],
            "properties": {
                "build": {
                    "type": "array",
                    "contains": {
                        "type": "string"
                    }
                },
                "reset": {
                    "type": "array",
                    "contains": {
                        "type": "string"
                    }
                }
            }
        },
        "services": {
            "type": "array",
            "contains": {
                "type": "string"
            }
        }
    },
    "required": ["sites", "hooks"]
}