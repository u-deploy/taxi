{
  "sites": [
    {
      "name": "laravel-1",
      "php": "php@8.1",
      "branch": "main",
      "secure": true,
      "database": [
        "mysql"
      ],
      "vcs": "https://github.com/laravel/laravel",
      "post-build": [
        "cp .env.example .env",
        "php artisan key:generate"
      ],
      "post-reset": []
    },
    {
      "name": "laravel-2",
      "branch": "main",
      "vcs": "https://github.com/laravel/laravel",
      "post-build": [
        "cp .env.example .env"
      ],
      "post-reset": []
    }
  ],
  "hooks": {
    "build": [
      "npm install",
      "npm run production",
      "composer install"
    ],
    "reset": [
      "rm -rf vendor && rm composer.lock",
      "composer install",
      "npm run production"
    ]
  },
  "services": [
    "mariadb",
    "redis",
    "minio"
  ]
}