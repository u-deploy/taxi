{
  "sites": [
    {
      "name": "laravel-single",
      "php": "php@8.1",
      "branch": "main",
      "secure": true,
      "vcs": "https://github.com/laravel/laravel",
      "post-build": [
        "cp .env.example .env",
        "php artisan key:generate"
      ],
      "post-reset": [
        "php artisan key:generate"
      ]
    }
  ],
  "hooks": {
    "build": [
      "npm install",
      "npm run production",
      "composer install"
    ],
    "reset": [
      "rm -rf vendor && rm composer.lock",
      "composer install",
      "npm run production"
    ]
  },
  "services": [
    "mariadb@10.7",
    "redis"
  ]
}